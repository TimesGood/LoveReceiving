<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_while_grey_stroke">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_while_radius">
        <TextView
            android:id="@+id/orderId_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="生产单号"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center" />
        <TextView
            android:id="@+id/detailName_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="产品名称"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center" />
        <TextView
            android:id="@+id/package_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="包装码"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center" />
        <LinearLayout
            android:id="@+id/receivingDate_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/receivingDate_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="收货日期"
                android:textSize="15sp"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>