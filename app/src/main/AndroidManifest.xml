<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aige.lovereceiving">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 获得震动许可 -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 读取联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="爱收货"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoveReceiving"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.ScanPlanNoReceivingActivity"></activity>
        <activity android:name=".activity.TestActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ManualReceivingActivity" />
        <activity android:name=".activity.ScanReceivingActivity" />
        <activity android:name=".activity.MyLoadingActivity" />
    </application>

</manifest>